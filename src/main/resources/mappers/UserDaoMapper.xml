<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hufan.dao.UserDao">
	<resultMap id="userMap" type="com.hufan.pojo.User">
		<id column="id" property="id" />
		<result column="username" property="username" />
		<result column="password" property="password" />
	</resultMap>
	<!-- 插入一条记录 使用数据库设定的自增id useGeneratedKeys="true" keyProperty="id" -->
	<insert id="addUser" parameterType="com.hufan.pojo.User"
		flushCache="true" statementType="PREPARED" useGeneratedKeys="true"
		keyProperty="id">
		insert into t_user(id,username,password)
		values
		(NULL,#{username},#{password})
	</insert>
	<!-- 修改用户密码 -->
	<update id="updateUser" parameterType="com.hufan.pojo.User">
		UPDATE t_user
		SET username
		=#{username},
		password= #{password}
		WHERE id=#{id}
	</update>
	
	<select id="getUserByUserName" resultMap="userMap">
		SELECT * From t_user WHERE username
		=#{username}
	</select>
	<!-- 查询所有的用户 -->
	<select id="getAllUser" resultMap="userMap">
		SELECT * From t_user
	</select>
	<select id="getUserById" resultMap="userMap">
		SELECT * from t_user where
		id=#{id}
	</select>
	<!-- 删除用户 -->
	<delete id="deleteUserById" parameterType="int">
		DELETE FROM t_user
		WHERE id=#{id}
	</delete>
</mapper>